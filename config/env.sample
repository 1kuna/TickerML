# Crypto Time-Series Transformer Pipeline Environment Variables
# Copy this file to .env and fill in your actual values

# NewsAPI Configuration (optional, for sentiment analysis)
NEWS_API_KEY=your_newsapi_key_here

# Ollama Configuration (for Gemma 3 sentiment analysis)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=gemma3:4b

# Email Alert Configuration (optional)
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_RECIPIENTS=alert1@example.com,alert2@example.com

# Webhook Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Database Configuration (optional, defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/crypto_db

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/crypto_pipeline.log

# Model Configuration
MODEL_CHECKPOINT_PATH=models/checkpoints/best_model.pt
ONNX_MODEL_PATH=models/onnx/crypto_transformer.onnx

# Performance Configuration
MAX_WORKERS=4
MEMORY_LIMIT_GB=8
GPU_ENABLED=true
MIXED_PRECISION=true 